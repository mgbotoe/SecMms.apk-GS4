<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/conversation_composer_left_screen" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <FrameLayout android:id="@id/conversationlist_container" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </LinearLayout>
    <FrameLayout android:id="@id/conversation_composer_right_screen" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <FrameLayout android:id="@id/composer_container" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <TextView android:textSize="19.0sp" android:textColor="@color/conversation_no_message_color" android:ellipsize="marquee" android:gravity="center_vertical" android:layout_gravity="center" android:id="@id/empty_screen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_selected_item" android:singleLine="true" android:drawableTop="@drawable/noitems_no_conversation" />
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/splitbar" android:visibility="gone" android:layout_width="@dimen/splitbar_width" android:layout_height="fill_parent">
        <ImageView android:layout_gravity="left" android:id="@id/splitbar_screen" android:background="@drawable/tw_split_holo" android:layout_width="@dimen/splitbar_screen" android:layout_height="fill_parent" />
        <ImageView android:layout_gravity="right" android:id="@id/splitshadow" android:background="@drawable/tw_list_shadow_holo_light" android:layout_width="@dimen/splitbar_screen" android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>